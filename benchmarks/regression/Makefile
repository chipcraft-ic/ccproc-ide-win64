TESTS := $(shell cat benchmarks.list)

# default
all: tests

.PHONY: all tests before_tests after_tests $(TESTS)

tests: before_tests $(TESTS) after_tests

$(TESTS):
	$(MAKE) -C "../$@" clean all ram-write
	sleep 25

before_tests:
	@echo "----------------------------------------------------------------------------------"
	@echo "-------------------- START TESTS -------------------------------------------------"
	@echo "----------------------------------------------------------------------------------"

after_tests:
	@echo "----------------------------------------------------------------------------------"
	@echo "-------------------- END TESTS ---------------------------------------------------"
	@echo "----------------------------------------------------------------------------------"

